.container{
  padding: 0px;
  margin: 0px;
  height: 1300px;
  display: flex;
  flex-direction: column;
  justify-content: start;
}

.title{
  margin-bottom: 20px;
  display: flex;
  justify-content: center;
}

.divider{
  height: 1px;
  width: 90%;
  margin-left: 5%;
  background-color: #A8A8A8;
  margin-top: 20px;
}

.former{
  margin-top: 20px;
  width: 100%;
  height: 1000px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.inputContainer{
  margin-bottom: 10px;
  margin-left: 10%;
  margin-right: 10%;
}

.inputLabel{
  font-size: 0.8rem;
  font-weight: bold;
}

.inputer{
  width: 80%;
  margin-left: 10%;
  border: 1px solid #A8A8A8;
  border-radius: 4px;
  padding: 2px;
  color: grey;
}

.checker{
  transform: scale(0.75,0.75);
}

.commitBtn{
  margin-left: 10%;
  width: 80%;
  margin-top: 40px;
  margin-bottom: 40px;
  background-color: #3399FF;
  border-radius: 5px;
  color: white;
}